{
    # Global options
    frankenphp {
        num_threads 4
    }

    worker "./worker.php" 
    
    # Auto HTTPS off untuk development
    auto_https off
    
    # Admin endpoint untuk monitoring
    admin localhost:2019
}

# Main server block
:80 {
    # Set root directory
    root * /app/public
    
    # Enable gzip compression
    encode gzip
    
    # Security headers
    header {
        # Remove server info
        -Server
        
        # Security headers
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # PHP handler dengan FrankenPHP
    php_server {
        # Resolve symlinks
        resolve_root_symlink
        
        # Split path for better routing
        split_path .php
    }
    
    # Handle static files
    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot
    }
    
    handle @static {
        # Cache static files for 1 year
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }
    
    # Handle PHP files
    @php {
        path *.php
    }
    
    handle @php {
        # FrankenPHP will handle this automatically
        php_server
    }
    
    # Handle everything else (for clean URLs)
    handle {
        # Try files first, then index.php
        try_files {path} {path}/ /index.php?{query}
    }
    
    # Logging
    log {
        output stdout
        format console
        level INFO
    }
    
    # Error handling
    handle_errors {
        respond "Error {http.error.status_code}: {http.error.status_text}"
    }
}